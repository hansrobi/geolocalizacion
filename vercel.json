{
    "version": 2,
    "builds": [
        {
            "src": "public/**/*",
            "use": "@vercel/static-build"
        },
        {
            "src": "server/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}
